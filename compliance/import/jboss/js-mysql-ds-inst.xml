<?xml version="1.0" encoding="UTF-8"?>

<datasources>

   <local-tx-datasource>
      <jndi-name>jdbc/jasperserver</jndi-name>
      <connection-url>jdbc:mysql://@@BITROCK_DATABASE_HOSTNAME@@:@@BITROCK_DATABASE_PORT@@/jasperserver?useUnicode=true&amp;characterEncoding=UTF-8</connection-url>
      <driver-class>com.mysql.jdbc.Driver</driver-class>
      <user-name>jasperdb</user-name>
      <password>password</password>
      <min-pool-size>5</min-pool-size>
      <max-pool-size>20</max-pool-size>
      <idle-timeout-minutes>0</idle-timeout-minutes>
